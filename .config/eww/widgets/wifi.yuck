(defpoll wifi-status :interval "1s" "$HOME/.config/scripts/wifi status")
(defpoll wifi-icon :interval "1s" "$HOME/.config/scripts/wifi icon")

(defwidget wifi []
  (box :class "wifi-container"
   (eventbox :class "${wifi-status != "Wi-Fi" ? "switcher-on" : "switcher-off"}" :onclick "$HOME/.config/scripts/wifi toggle"
     (box :width 225 :orientation "h" :space-evenly false :halign "center"
       (label :class "switcher-icon" :text "${wifi-icon}")
       (label :class "switcher-text" :tooltip "${wifi-status}" :text "${wifi-status}" :limit-width 10)))))
